        "properties": {
            "collectionInspectorComponentModule": {"%": "ui/controls/viewer.reel"},
            "collectionNameExpression": "'Devices'",
            "inspectorComponentModule": {"%": "ui/sections/vms/inspectors/virtual-machine-device.reel"},
            "creatorComponentModule": {"%": "ui/sections/vms/inspectors/virtual-machine-device-creator.reel"},
            "nameExpression": "!_isNew ? name : 'New ' + type + ' Device'",
